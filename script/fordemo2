#!/bin/bash
# Program
#       Use ping command to check the network's PC state.
# History
# 2009/02/18    VBird   first release
PATH=/bin:/sbin:/usr/bin:/usr/sbin:/usr/local/bin:/usr/local/sbin:~/bin
export PATH
network="192.168.2"              # ÏÈ¶¨ÒåÒ»¸öÍøÓòµÄÇ°Ãæ²¿·Ö£¡
for sitenu in $(seq 1 100)       # seq Îª sequence(Á¬Ğø) µÄËõĞ´Ö®Òâ
do
	# µ×ÏÂµÄ³ÌĞòÔÚÈ¡µÃ ping çš????´«ÖµÊÇÕıÈ·µÄ»¹ÊÇÊ§°ÜµÄ£¡
        ping -c 1 -w 1 ${network}.${sitenu} &> /dev/null && result=0 || result=1
	# ¿ªÊ¼ÏÔÊ¾½á¹ûæ??ÕıÈ·µÄÆô¶¯ (UP) »¹ÊÇ´íÎóµÄÃ»ÓĞÁ¬Í¨ (DOWN)
        if [ "$result" == 0 ]; then
                echo "Server ${network}.${sitenu} is UP."
        else
                echo "Server ${network}.${sitenu} is DOWN."
        fi
done
